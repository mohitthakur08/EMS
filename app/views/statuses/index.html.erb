


<h1 class=text-center>Your Leaves</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Project</th>
        <th scope="col">Hours</th>
        <th scope="col">Task</th>
      </tr>
    </thead>

    <tbody>
    
      <% @status.each do |s| %>
       
        <tr>
          <% if s.user_id == current_user.id %>
          
            <td> <%= s.project_name %> </td>
            <td> <%= s.working_hours %> </td>
            <td> <%= s.task %> </td>
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>

<%if admin_user %>

<h1 class=text-center>Daily status</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Employee email</th>
        <th scope="col">Project</th>
        <th scope="col">Hours</th>
        <th scope="col">Task</th>
      </tr>
    </thead>

    <tbody>
    
      <% @status.each do |s| %>
        <tr>
          <td> <%= s.user.email %> </td>
          <td> <%= s.project_name %> </td>
          <td> <%= s.total_hours %> </td>
          
          <td><%= link_to "show",statuses_daily_task_status_path(id: s.id), class:"btn btn-outline-info"%></td>
        
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%else%>
    <h1 class=text-center>Daily status</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Employee email</th>
        <th scope="col">Project</th>
        <th scope="col">Hours</th>
        <th scope="col">Task</th>
      </tr>
    </thead>

    <tbody>
    
      <% @status.each do |s| %>
       
        <tr>
        
          <% if s.user_id == current_user.id %>
            <td> <%= s.user.email %> </td>
            <td> <%= s.project_name %> </td>
            <td> <%= s.total_hours %> </td>
            <td> <%= s.task %> </td>
          
          <%end%>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%end%>
  
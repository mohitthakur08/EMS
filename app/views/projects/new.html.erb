<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @project ,local: true) do |f| %>
      <%= f.label :status %>
      <%= f.select :status, options_for_select([['active',"active"],['deactive',"deactive"]])%>
      
      <%= f.label :manager_id %>
      <%= f.collection_select :manager_id, User.all.where(type:"Manager"), :first_name, :first_name%><br>

      <%= f.label :project_name %>
      <%= f.text_field :project_name, class: 'form-control' %>
      
      <%= f.hidden_field :user_id, value:current_user.id %><br>
      
      <%= f.submit "create Project", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% if admin_user %>
<h1>All users</h1>
<% @users.each do |user| %>
    <li>
      <%= user.id%> <strong>Employee Name : </strong>
      <%= user.first_name %>
      <%= user.last_name %><strong> Employee Email : </strong>
      <%= user.email%>
      
    </li>
  <% end %>
<section>
<h1> All Projects</h1>
 <% @projects.each do |project| %>
    <li>
      
      <%= project.user_id %><strong>Employee Name : </strong>
      <%= project.user.first_name %>
      <%= project.user.last_name %><strong>Project Name : </strong>
      <%= project.project_name %><strong>Project Status : </strong>
      <%= project.status %>
      
    </li>
  <% end %>
</section>
<%else%>
<h1> All Projects</h1>
<ul class="users">
    <% @projects.each do |project| %>
    <li>
      <% if project.user_id == current_user.id %>
      <%= project.user_id %>
      <%= project.user.first_name %>
      <%= project.user.last_name %><strong>Project Name : </strong>
      <%= project.project_name %><strong>Project Status : </strong>
      <%= project.status %>
      
      <%end%>
    </li>
  <% end %>
</ul>
<%end%>

